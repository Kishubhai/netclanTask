<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MerchantFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            app:startIconDrawable="@drawable/search_24">



            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="310dp"
                android:layout_height="35dp"
                android:hint="Search"
                android:background="@drawable/et_style"
                />


        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:layout_marginTop="15dp"
            android:id="@+id/side_corner"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/side_search"
            />
    </LinearLayout>
    <ImageView
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/robot"/>
    <LinearLayout
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="Your explore list is "/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="Empty"/>

    </LinearLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textAlignment="center"

        android:text="Sorry,we could not find any user near you."/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14dp"
        android:textAlignment="center"

        android:text="Try increasing your search radius."/>
    <Button
        app:backgroundTint="@color/darkblue"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"

        android:layout_width="250dp"
        android:layout_height="35dp"
        android:background="@drawable/et_style"

        android:text="INCREASE YOUR RADIUS" />
    <LinearLayout
        android:layout_marginStart="25dp"
        android:layout_marginTop="233dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginStart="15dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/explore_icon"/>
            <TextView
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="explore"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginStart="24dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/network_icon"/>
            <TextView
                android:layout_marginStart="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginStart="24dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/chat_icon"/>
            <TextView
                android:layout_marginStart="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginStart="24dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/contact_icon"/>
            <TextView
                android:layout_marginStart="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginStart="24dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/group_icon"/>
            <TextView
                android:layout_marginStart="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groups"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>